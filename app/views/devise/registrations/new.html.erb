<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6">新規作成</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <% if flash[:error].present? %>
      <div class="alert alert-danger"><%= flash[:error] %></div>
    <% end %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-4">
      <%= f.label :name, "ユーザー名", class: "block text-lg font-medium text-gray-700" %>
      <%= f.text_field :name, autofocus: true, class: "w-full p-2 border border-gray-300 rounded" %>
    </div>

    <div class="mb-4">
      <%= label :email, "メールアドレス", class: "block text-lg font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500 focus:border-blue-500 p-2" %>
    </div>

    <div class="mb-4">
      <%= label :password, "パスワード(6文字以上)", class: "block text-lg font-medium text-gray-700" %>
      <% if @minimum_password_length %>
        <em class="text-white">（<%= @minimum_password_length %> 文字以上）</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500 focus:border-blue-500 p-2" %>
    </div>

    <div class="mb-4">
      <%= label :password_confirmation, "パスワード確認", class: "block text-lg font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500 focus:border-blue-500 p-2" %>
    </div>

    <div class="flex items-center justify-between">
      <%= f.submit "新規作成", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
      <%= link_to "ログイン", new_user_session_path(resource_name), class: "text-blue-500 hover:underline" %>
    </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>